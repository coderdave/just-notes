<div class="row-fluid">
  <% if signed_in? %>
      <aside class="span4">
        <section>
          <%#= render 'shared/user_info' %>
        </section>
        <section>
          <%#= render 'shared/stats' %>
        </section>
        <section>
          <%#= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="span8">
        <h3>Micropost Feed</h3>
        <%#= render 'shared/feed' %>
      </div>
  <% else %>
      <div class="center hero-unit">
        <h1>Welcome to Just Notes!</h1>

        <h2>
          Nothing more. Nothing less.
        </h2>
        <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
      </div>
  <% end %>
</div>