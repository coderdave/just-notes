<% provide(:title, "Sign in") %>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for(:session, url: sessions_path, html: {class: "form-horizontal"}) do |f| %>
      <legend>Sign In</legend>

      <%= f.input :email %>

      <%= f.input :password %>

      <div class="form-actions">
        <%= f.button :submit, 'Sign In', class: 'btn btn-large btn-primary' %>
        <%= link_to 'Cancel', root_path, class: "btn btn-large" %>
      </div>

    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>